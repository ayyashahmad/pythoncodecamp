print(distance)\n","\n","product=[i*j*k for i,j,k in zip(X,Y,Z)]\n","print(\"product:\",product)\n"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"PIUsajQTvpRK","executionInfo":{"status":"ok","timestamp":1639662061391,"user_tz":-480,"elapsed":415,"user":{"displayName":"Ayyash Ahmad","photoUrl":"https://lh3.googleusercontent.com/a-/AOh14GgJXwgr7x7IEXfbdT-OxAUW47WAGbdjCkH2L-Zqsw=s64","userId":"17632978179708866392"}},"outputId":"f4b8302c-f033-4565-8067-4892457c86cb"},"execution_count":14,"outputs":[{"output_type":"stream","name":"stdout","text":["1.0\n","2.8284271247461903\n","5.0\n","7.211102550927978\n","9.433981132056603\n","product: [0, -24, -108, -72]\n"]}]}]}